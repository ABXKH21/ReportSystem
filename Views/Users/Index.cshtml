@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityUser>

@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<div class="row m-2">
    <div class="col-8">
        <h1>قائمة الموظفين</h1>
    </div>
    <div class="col-4">

        <a asp-controller="Users" asp-action="Create" class="btn btn-primary">انشاء حساب موظف جديد</a>
    </div>
</div>


<br />


<table class="table table-striped" id="userTable">
    <thead>
        <tr>
            <th>
                الموظفين
            </th>
            <th>
                الايميل
            </th>
            <th style="width:10%">
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    <div class="row">
                        <div class="col-sm">
                            <a>
                                @user.UserName
                            </a>
                            <br>
                            <small>
                               
                            </small>
                        </div>
                    </div>
                </td>
                <td>
                    <a>
                        @user.Email
                    </a>
                </td>
                <td>
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Action
                        </button>
                        <div class="dropdown-menu shadow animated--grow-in">
                            <a style='margin-right:16px' asp-controller="userroles" asp-action="Index" asp-route-userId="@user.Id" class="dropdown-item">
                                <i class="fas fa-wrench"></i> اعطاء صلاحية
                            </a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>